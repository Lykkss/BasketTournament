{% extends 'base.html.twig' %}

{% block title %}Modifier le Match{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier le Match</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                <label class="form-label">Équipe A</label>
                {{ form_widget(form.equipeA) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Score Équipe A</label>
                {{ form_widget(form.scoreEquipeA) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Équipe B</label>
                {{ form_widget(form.equipeB) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Score Équipe B</label>
                {{ form_widget(form.scoreEquipeB) }}
            </div>

            <button type="submit" class="btn btn-success">✅ Enregistrer</button>
        {{ form_end(form) }}

        <a href="{{ path('app_game_index') }}" class="btn btn-secondary mt-3">Retour</a>
    </div>
{% endblock %}
