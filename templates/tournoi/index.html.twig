{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-4">üèÜ Tournois</h2>

        {% if tournois is empty %}
            <p class="text-muted">Aucun tournoi disponible.</p>
        {% else %}
            <div class="row">
                {% for tournoi in tournois %}
                    <div class="col-md-4">
                        <div class="card shadow-sm mb-3">
                            <div class="card-body">
                                <h5 class="card-title">{{ tournoi.nom }}</h5>
                                <p class="card-text">
                                    <strong>Date :</strong> {{ tournoi.dateDebut|date('d/m/Y') }} - {{ tournoi.dateFin|date('d/m/Y') }}<br>
                                    <strong>Statut :</strong> <span class="badge bg-info">{{ tournoi.status }}</span>
                                </p>
                                <a href="{{ path('tournoi_show', {'id': tournoi.id}) }}" class="btn btn-primary btn-sm">
                                    Voir D√©tails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
