{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block body %}
    <h2>Tournois</h2>
    <form method="get" action="{{ path('tournois_list') }}">
        <select name="status" onchange="this.form.submit()">
            <option value="Tous" {% if status == 'Tous' %}selected{% endif %}>Tous</option>
            <option value="À venir" {% if status == 'À venir' %}selected{% endif %}>À venir</option>
            <option value="En cours" {% if status == 'En cours' %}selected{% endif %}>En cours</option>
            <option value="Terminé" {% if status == 'Terminé' %}selected{% endif %}>Terminé</option>
        </select>
    </form>
    
    <ul>
        {% for tournoi in tournois %}
            <li>{{ tournoi.nom }} - {{ tournoi.status }}</li>
        {% endfor %}
    </ul>
{% endblock %}
