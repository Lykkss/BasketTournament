{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>üèÜ Tournois</h2>

        <!-- Onglets pour filtrer les tournois -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link {% if status == 'Tous' %}active{% endif %}" href="{{ path('tournois_list', {status: 'Tous'}) }}">üåç Tous</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if status == '√Ä venir' %}active{% endif %}" href="{{ path('tournois_list', {status: '√Ä venir'}) }}">‚è≥ √Ä venir</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if status == 'En cours' %}active{% endif %}" href="{{ path('tournois_list', {status: 'En cours'}) }}">üî• En cours</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if status == 'Termin√©' %}active{% endif %}" href="{{ path('tournois_list', {status: 'Termin√©'}) }}">üèÅ Termin√©</a>
            </li>
        </ul>

        <!-- Liste des tournois -->
        <div class="mt-3">
            {% if tournois is empty %}
                <p class="text-muted">Aucun tournoi trouv√©.</p>
            {% else %}
                <div class="row">
                    {% for tournoi in tournois %}
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">{{ tournoi.nom }}</h5>
                                    <p class="card-text">
                                        <strong>D√©but :</strong> {{ tournoi.dateDebut|date('d/m/Y H:i') }}<br>
                                        <strong>Fin :</strong> {{ tournoi.dateFin|date('d/m/Y H:i') }}<br>
                                        <strong>Statut :</strong> 
                                        <span class="badge 
                                            {% if tournoi.status == '√Ä venir' %}bg-success{% elseif tournoi.status == 'En cours' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ tournoi.status }}
                                        </span>
                                    </p>
                                    <a href="{{ path('tournoi_show', {'id': tournoi.id}) }}" class="btn btn-primary">Voir le tournoi</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
