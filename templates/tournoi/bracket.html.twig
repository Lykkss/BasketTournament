{% extends 'base.html.twig' %}

{% block title %}Bracket du Tournoi{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center">Bracket du tournoi : {{ tournoi.nom }}</h2>

        {% if matches|length > 0 %}
            <div class="row">
                {% for match in matches %}
                    <div class="col-md-6">
                        <div class="card text-center mb-3">
                            <div class="card-header bg-primary text-white">
                                Match #{{ loop.index }}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ match.equipeA.nom }} 
                                    <span class="text-danger">vs</span> 
                                    {{ match.equipeB.nom }}
                                </h5>
                                <p class="card-text">
                                    <strong>Score :</strong> 
                                    {{ match.scoreEquipeA|default('-') }} - {{ match.scoreEquipeB|default('-') }}
                                </p>
                                {% if match.vainqueur %}
                                    <p class="alert alert-success">üèÜ Vainqueur : {{ match.vainqueur.nom }}</p>
                                {% else %}
                                    <p class="alert alert-warning">‚ö†Ô∏è En attente de r√©sultats</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center mt-4">Aucun match disponible.</p>
        {% endif %}
    </div>
{% endblock %}
