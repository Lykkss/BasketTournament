{% extends 'base.html.twig' %}

{% block title %}Bracket - {{ tournoi.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center">üèÜ Bracket du Tournoi - {{ tournoi.nom }}</h1>

    {# V√©rification s'il y a des matchs #}
    {% if matches|length > 0 %}
        <div class="bracket mt-4">
            {% for match in matches %}
                <div class="match-card">
                    <div class="team">
                        <span class="team-name">{{ match.equipeA.nom }}</span>
                        <span class="team-score">{{ match.getScoreEquipeA() is not null ? match.getScoreEquipeA() : '-' }}</span>
                    </div>
                    <div class="vs">VS</div>
                    <div class="team">
                        <span class="team-name">{{ match.equipeB.nom }}</span>
                        <span class="team-score">{{ match.getScoreEquipeB() is not null ? match.getScoreEquipeB() : '-' }}</span>
                    </div>
                    <div class="winner">
                        {% if match.vainqueur %}
                            üéâ <strong>Vainqueur :</strong> {{ match.vainqueur.nom }}
                        {% else %}
                            ‚ö†Ô∏è Match en attente
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted text-center mt-4">‚ö†Ô∏è Aucun match g√©n√©r√© pour ce tournoi.</p>
    {% endif %}

    {# üîπ Bouton de retour aux d√©tails du tournoi #}
    <a href="{{ path('tournoi_show', { id: tournoi.id }) }}" class="btn btn-secondary mt-3">‚¨ÖÔ∏è Retour au tournoi</a>
</div>

{# Styles pour le bracket #}
<style>
    .bracket {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .match-card {
        border: 1px solid #ddd;
        padding: 10px;
        width: 400px;
        margin-bottom: 15px;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .team {
        display: flex;
        justify-content: space-between;
        font-size: 1.2em;
        padding: 5px;
    }
    .vs {
        font-weight: bold;
        font-size: 1.5em;
        margin: 10px 0;
        color: #555;
    }
    .winner {
        font-weight: bold;
        color: #28a745;
        margin-top: 10px;
    }
    .team-name {
        font-weight: bold;
    }
    .team-score {
        font-size: 1.5em;
        font-weight: bold;
    }
</style>

{% endblock %}
