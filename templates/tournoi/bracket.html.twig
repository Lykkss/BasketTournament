{% extends 'base.html.twig' %}

{% block title %}Bracket du Tournoi - {{ tournoi.nom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>üèÜ Bracket du Tournoi : {{ tournoi.nom }}</h1>

        {# V√©rification des matchs du tournoi #}
        {% if tournoi.games|length > 0 %}
            <div class="row">
                {% for game in tournoi.games %}
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-header bg-dark text-white">
                                Match #{{ loop.index }}
                            </div>
                            <div class="card-body text-center">
                                <h5>{{ game.equipeA.nom }} üÜö {{ game.equipeB.nom }}</h5>
                                <p>Score: <strong>{{ game.scoreEquipeA is not null ? game.scoreEquipeA : '-' }} - {{ game.scoreEquipeB is not null ? game.scoreEquipeB : '-' }}</strong></p>
                                <p>Vainqueur: 
                                    {% if game.vainqueur is not null %}
                                        üéâ <strong>{{ game.vainqueur.nom }}</strong>
                                    {% else %}
                                        ‚ö†Ô∏è En attente
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="mt-4">‚ö†Ô∏è Aucun match g√©n√©r√© pour ce tournoi.</p>
        {% endif %}

        <a href="{{ path('tournoi_show', { id: tournoi.id }) }}" class="btn btn-secondary mt-3">Retour au tournoi</a>
    </div>
{% endblock %}
