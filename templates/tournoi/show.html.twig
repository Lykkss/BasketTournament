{% extends 'base.html.twig' %}

{% block title %}D√©tails du Tournoi{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ tournoi.nom }}</h1>
        
        <p><strong>Date de d√©but :</strong> {{ tournoi.dateDebut|date('d/m/Y H:i') }}</p>
        <p><strong>Date de fin :</strong> {{ tournoi.dateFin|date('d/m/Y H:i') }}</p>
        <p><strong>Statut :</strong> 
            <span class="badge {% if tournoi.status == '√Ä venir' %}bg-success{% elseif tournoi.status == 'En cours' %}bg-warning{% else %}bg-danger{% endif %}">
                {{ tournoi.status }}
            </span>
        </p>
        <p><strong>Nombre max d'√©quipes :</strong> {{ tournoi.nbMaxEquipes }}</p>

        {# Messages flash pour informer l'utilisateur #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {# Liste des participants #}
        <h2 class="mt-4">üë• Participants</h2>
        {% if tournoi.participants|length > 0 %}
            <ul class="list-group">
                {% for participant in tournoi.participants %}
                    <li class="list-group-item">{{ participant.email }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun participant pour le moment.</p>
        {% endif %}

        {# Affichage des matchs #}
        {% if tournoi.games|length > 0 %}
            <h2 class="mt-4">üèÜ Matchs</h2>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>√âquipe A</th>
                        <th>Score</th>
                        <th>√âquipe B</th>
                        <th>Score</th>
                        <th>Vainqueur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for game in tournoi.games %}
                        <tr>
                            <td>{{ game.equipeA.nom }}</td>
                            <td>{{ game.scoreEquipeA is not null ? game.scoreEquipeA : '-' }}</td>
                            <td>{{ game.equipeB.nom }}</td>
                            <td>{{ game.scoreEquipeB is not null ? game.scoreEquipeB : '-' }}</td>
                            <td>
                                {% if game.vainqueur is not null %}
                                    üéâ {{ game.vainqueur.nom }}
                                {% else %}
                                    ‚ö†Ô∏è Pas encore jou√©
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_game_edit', { id: game.id }) }}" class="btn btn-sm btn-warning">
                                    ‚úèÔ∏è Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="mt-4">‚ö†Ô∏è Aucun match g√©n√©r√© pour le moment.</p>
        {% endif %}

        {# Bouton pour g√©n√©rer le tour suivant #}
        {% if tournoi.status == 'En cours' %}
            <div class="mt-4">
                <a href="{{ path('generate_next_round', { id: tournoi.id }) }}" class="btn btn-primary">
                    üîÑ G√©n√©rer le tour suivant
                </a>
            </div>
        {% endif %}

        {# Boutons pour revenir √† la liste des tournois et voir le bracket #}
        <a href="{{ path('tournois_list') }}" class="btn btn-secondary mt-3">Retour aux tournois</a>
        <a href="{{ path('tournoi_bracket', { id: tournoi.id }) }}" class="btn btn-info mt-3">üìä Voir le Bracket</a>

    </div>
{% endblock %}
