{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil{% endblock %}

{% block body %}
<div class="container">
    <h2 class="mt-4">üìù Modifier mon Profil</h2>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nom) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prenom) }}
        </div>
