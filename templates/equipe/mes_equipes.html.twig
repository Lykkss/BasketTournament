{% extends 'base.html.twig' %}

{% block title %}Mes √âquipes{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-4">üìã Mes √âquipes</h2>

        {% if equipes is empty %}
            <p class="text-muted">Vous ne faites partie d'aucune √©quipe.</p>
        {% else %}
            <div class="row">
                {% for equipe in equipes %}
                    <div class="col-md-4">
                        <div class="card shadow-sm mb-3">
                            <div class="card-body">
                                <h5 class="card-title">üèÄ {{ equipe.nom }}</h5>
                                <p class="card-text">
                                    <strong>Tournoi :</strong> {{ equipe.tournoi.nom }}<br>
                                    <strong>Membres :</strong> {{ equipe.membres|length }}
                                </p>

                                {# Afficher la liste des membres #}
                                <ul class="list-group list-group-flush">
                                    {% for membre in equipe.membres %}
                                        <li class="list-group-item">{{ membre.nom }} {{ membre.prenom }}</li>
                                    {% endfor %}
                                </ul>

                                <div class="mt-3">
                                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" class="btn btn-primary btn-sm">
                                        Voir l'√©quipe
                                    </a>

                                    {# V√©rification pour afficher le bouton "Quitter l'√©quipe" #}
                                    <form method="post" action="{{ path('equipe_quitter', {'id': equipe.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('quitter' ~ equipe.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">Quitter l'√©quipe</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
